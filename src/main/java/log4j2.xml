<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="TRACE">

  <Appenders>
    <File name="HostAll" fileName="logs/host/hostall.log">
      <PatternLayout>
        <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
      </PatternLayout>
    </File>

    <File name="HostWarn" fileName="logs/hostwarn.log">
      <PatternLayout>
        <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
      </PatternLayout>
    </File>
  </Appenders>

  <Loggers>
    <Root level="trace">
      <AppenderRef ref="HostAll" level="all"/>
      <AppenderRef ref="HostWarn" level="warn"/>
    </Root>
  </Loggers>
</Configuration>